# ===========================================
# RET v4 - Environment Configuration Template
# ===========================================
# Copy this file to .env and customize for your environment.
# For environment-specific settings, you can also create:
#   - .env.development
#   - .env.staging
#   - .env.production
#   - .env.testing

# ===========================================
# Environment
# ===========================================
# Options: development, staging, production, testing
ENV=development

# ===========================================
# Application
# ===========================================
APP_NAME=RET-v4
DEBUG=true

# ===========================================
# API Server
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# Frontend URL (for CORS)
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# CORS Origins (comma-separated)
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Database
# ===========================================
# Development (SQLite):
DATABASE_URL=sqlite:///./test.db

# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/ret_db

# ===========================================
# Security / JWT
# ===========================================
# IMPORTANT: Generate a strong secret for production!
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Azure OpenAI
# ===========================================
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_CHAT_MODEL=gpt-4o
AZURE_OPENAI_EMBED_MODEL=text-embedding-ada-002

# ===========================================
# AI Configuration
# ===========================================
# Options: lite, langchain, advanced
AI_STRATEGY=lite
RET_AI_TEMPERATURE=0.7

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
