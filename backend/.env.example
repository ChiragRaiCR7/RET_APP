# RET v4 Backend Configuration

# App Settings
APP_NAME=RET-v4
ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Database (SQLite for local dev, or PostgreSQL for production)
# For SQLite:
DATABASE_URL=sqlite:///./ret_app.db
# For PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/ret_app

# JWT & Session
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (for Celery and rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Storage
RET_RUNTIME_ROOT=./runtime

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Azure OpenAI (optional - leave empty if not using)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15
AZURE_OPENAI_CHAT_MODEL=gpt-4
AZURE_OPENAI_EMBED_MODEL=text-embedding-3-large
